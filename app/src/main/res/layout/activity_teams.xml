<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teams">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/intentTextView"
        android:layout_centerVertical="true"
        android:layout_above="@+id/editTextTextPersonName"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <ListView
        android:id="@+id/listItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/intentTextView"
        />
    <Button
        android:id="@+id/eastView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Eastern-Conference"
        android:textColor="@color/white"
        android:backgroundTint="@color/darkblue" />
    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eastView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:hint=" Input NBA"
        android:inputType="textPersonName"
        android:visibility="visible" />

</RelativeLayout>


